{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "node16",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "moduleResolution": "node16",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".", // Add this line
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src"] // Make sure this line is present
}
